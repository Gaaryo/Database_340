<!DOCTYPE html>>
<html lang="en">
    <head>
        <title>Players Edit Page</title>
        <link rel="stylesheet" href="../css/style.css">
    </head>
    <body>
        
        
        <div class="contents">
            <h2>
                Players Edit
            </h2>
            <div class="create">
                <form id="add-player-form" method="POST" action="/add-player-form">
                    <h3>Create New Data</h3>
                    <div class="u_input">
                        <label for="input-first_name">First Name</label>
                        <input name="input-first_name" id="input-first_name">
                        <p>*required</p>
                    </div>
                    <div class="u_input">
                        <label for="input-last_name">Last Name</label>
                        <input name="input-last_name" id="input-last_name">
                        <p>*required</p>
                    </div>
                    <div class="u_input">
                        <label for="input-nation">Nation</label>
                        <input name="input-nation" id="input-nation">
                        <p>*required</p>
                    </div>
                    <div class="u_input">
                        <label for="input-phone_num">Phone Number</label>
                        <input name="input-phone_num" id="input-phone_num">
                    </div>

                    <div class="u_input">
                        <label for="edit-coach-id">Coach</label>
                        <select name="input-coach-id" id="input-coach-id">
                            <option> Select a Coach </option>
                            {{#each coaches}}
                            <option value="{{this.coach_id}}">{{this.first_name}} {{this.last_name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <input type="submit">
                </form>
            </div>

            <div class="edit">
                <form id="edit-player-form" method="POST" action="/edit-player-form">
                    <h3>Edit Existing Data</h3>
                    <div class="u_input">
                        <label for="edit-player-id">Player</label>
                        <select name="edit-player-id" id="edit-player-id" required>
                            <option value=""> Select a player </option>
                            {{#each players}}
                            <option value="{{this.player_id}}">{{this.first_name}} {{this.last_name}}</option>
                            {{/each}}
                        </select>
                        <p>*required</p>
                    </div>
                    
                    <div class="u_input">
                        <label for="edit-player-fname">First Name</label>
                        <input name="edit-player-fname" id="edit-player-fname">
                    </div>

                    <div class="u_input">
                        <label for="edit-player-lname">Last Name</label>
                        <input name="edit-player-lname" id="edit-player-lname">
                    </div>

                    <div class="u_input">
                        <label for="edit-nation">Nation</label>
                        <input name="edit-nation" id="edit-nation">
                    </div>
                    <div class="u_input">
                        <label for="edit-phone-num">Phone Number</label>
                        <input name="edit-phone-num" id="edit-phone-num">
                    </div>

                    <div class="u_input">
                        <label for="edit-coach-id">Coach</label>
                        <select name="edit-coach-id" id="edit-coach-id">
                            <option value=""> Select a Coach </option>
                            {{#each coaches}}
                            <option value="{{this.coach_id}}">{{this.first_name}} {{this.last_name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <input type="submit">
                    <!-- <button>Edit Data</button> -->
                </form>
            </div>
            
            
            <div>
                <table id="players-table">
                    <thead>
                        <tr>
                            
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Nation</th>
                            <th>Phone Num</th>
                            <th>Coach First Name</th>
                            <th>Coach Last Name</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    {{!-- Body section --}}
                    <tbody>

                        {{#each data}}
                        <tr data-value={{this.player_id}}>
                            <td>{{this.player_id}}</td>
                            <td>{{this.player_first_name}}</td>
                            <td>{{this.player_last_name}}</td>
                            <td>{{this.nation}}</td>
                            <td>{{this.phone_num}}</td>
                            <td>{{this.coach_first_name}}</td>
                            <td>{{this.coach_last_name}}</td>
                            <td><button class= "delete_button" onclick="deletePlayer({{this.player_id}})"> - </button></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                <script src="./js/delete_player.js"></script>
            </div>
            
        </div>


    </body>
</html>
