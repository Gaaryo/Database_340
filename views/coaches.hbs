<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Coaches Edit Page</title>
        <link rel="stylesheet" href="../css/style.css">
    </head>
    <table id="coaches-table">
    {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>delete</th>
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
            {{#each data}}
            <tr data-value={{this.coach_id}}>
                <td>{{this.coach_id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td><button onclick="deleteCoach({{this.coach_id}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="./js/delete_coach.js"></script>

<!-- /views/index.hbs -->
    <form id="add-coach-form" method="POST" action="/add-coach-form">
        <label for="input-first_name">First Name: </label>
        <input type="text" name="input-first_name" id="input-first_name">
        
        <label for="input-last_name">Last Name: </label>
        <input type="text" name="input-last_name" id="input-last_name">

        <input type="submit">
    </form>
</html>
