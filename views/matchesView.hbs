<!DOCTYPE html>>
<html lang="en">
    <head>
        <title>Matches View Page</title>
        <link rel="stylesheet" href="../css/style.css">
    </head>
    <body>
        
        <div class="contents">
            <h2>
                Matches View
            </h2>
            
            <div>
                <table id="matches-table">
                    <thead>

                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Player1</th>
                            <th>Player2</th>
                            <th>Winner</th>
                            <th>Score</th>
                            <th>Year</th>

                        </tr>
                    </thead>

                    {{!-- Body section --}}
                    <tbody>

                        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
                        {{#each data}}
                        <tr data-value={{this.match_id}}>
                            <td>{{this.match_id}}</td>
                            <td>{{this.date}}</td>
                            <td>{{this.player1}}</td>
                            <td>{{this.player2}}</td>
                            <td>{{this.winner}}</td>
                            <td>{{this.score}}</td>
                            <td>{{this.year}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            
        </div>


    </body>
</html>
