                        <label>ID(data you edit)</label>
                        <input>
                        <p>*require</p>
                    </div>
                    <div class="u_input">
                        <label>Offering</label>
                        <input>
                        <p>*require</p>
                    </div>
                    
                    
                    <button>Edit Data</button>
                </form>
            </div>
            
            
            <div>
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Offering</th>

                        <th>Delete</th>
                        
                    </tr>
